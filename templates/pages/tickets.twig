<div class="min-h-screen bg-gray-50">
    <!-- Navigation -->
    <nav class="bg-white shadow-sm">
        <div class="max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="text-2xl font-bold text-indigo-600">TicketFlow</div>
                <div class="flex gap-4">
                    <a href="index.php?page=dashboard" class="px-4 py-2 text-gray-700 hover:text-gray-900">
                        Dashboard
                    </a>
                    <form method="POST" action="index.php" class="inline">
                        <input type="hidden" name="action" value="logout">
                        <button type="submit" class="flex items-center gap-2 px-4 py-2 text-red-600 hover:bg-red-50 rounded-lg">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                                <polyline points="16 17 21 12 16 7"></polyline>
                                <line x1="21" y1="12" x2="9" y2="12"></line>
                            </svg>
                            Logout
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </nav>

    <!-- Ticket Management Content -->
    <div class="max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="flex justify-between items-center mb-8">
            <h1 class="text-4xl font-bold text-gray-800">Ticket Management</h1>
            <button onclick="showCreateForm()" class="flex items-center gap-2 px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 font-semibold">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="12" y1="5" x2="12" y2="19"></line>
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                </svg>
                New Ticket
            </button>
        </div>

        <!-- Create/Edit Form -->
        <div id="ticketForm" class="bg-white p-6 rounded-2xl shadow-lg mb-8 {% if not editingTicket %}hidden{% endif %}">
            <h2 class="text-2xl font-bold mb-6 text-gray-800">
                <span id="formTitle">{{ editingTicket ? 'Edit Ticket' : 'Create New Ticket' }}</span>
            </h2>
            <form method="POST" action="index.php" onsubmit="return validateTicketForm()" id="mainTicketForm">
                <input type="hidden" name="action" value="{{ editingTicket ? 'update_ticket' : 'create_ticket' }}" id="formAction">
                <input type="hidden" name="id" value="{{ editingTicket.id }}" id="ticketId">
                
                <div class="space-y-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Title *</label>
                        <input
                            type="text"
                            name="title"
                            id="title"
                            value="{{ editingTicket.title }}"
                            required
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                        >
                        <p id="titleError" class="text-red-500 text-sm mt-1 hidden"></p>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Description</label>
                        <textarea
                            name="description"
                            id="description"
                            rows="4"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                        >{{ editingTicket.description }}</textarea>
                    </div>
                    
                    <div class="grid md:grid-cols-2 gap-6">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Status *</label>
                            <select
                                name="status"
                                id="status"
                                required
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                            >
                                <option value="open" {{ editingTicket.status == 'open' ? 'selected' : '' }}>Open</option>
                                <option value="in_progress" {{ editingTicket.status == 'in_progress' ? 'selected' : '' }}>In Progress</option>
                                <option value="closed" {{ editingTicket.status == 'closed' ? 'selected' : '' }}>Closed</option>
                            </select>
                            <p id="statusError" class="text-red-500 text-sm mt-1 hidden"></p>
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Priority</label>
                            <select
                                name="priority"
                                id="priority"
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                            >
                                <option value="low" {{ editingTicket.priority == 'low' ? 'selected' : '' }}>Low</option>
                                <option value="medium" {{ editingTicket.priority == 'medium' ? 'selected' : '' }}>Medium</option>
                                <option value="high" {{ editingTicket.priority == 'high' ? 'selected' : '' }}>High</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="flex gap-4">
                        <button type="submit" class="px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 font-semibold">
                            <span id="submitButtonText">{{ editingTicket ? 'Update' : 'Create' }} Ticket</span>
                        </button>
                        <button type="button" onclick="hideForm()" class="px-6 py-3 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 font-semibold">
                            Cancel
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <!-- Tickets Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for ticket in tickets %}
            <div class="bg-white p-6 rounded-2xl shadow-lg hover:shadow-xl transition-shadow">
                <div class="flex justify-between items-start mb-4">
                    <h3 class="text-xl font-bold text-gray-800">{{ ticket.title }}</h3>
                    <span class="px-3 py-1 rounded-full text-xs font-semibold 
                        {% if ticket.status == 'open' %}bg-green-100 text-green-800
                        {% elseif ticket.status == 'in_progress' %}bg-amber-100 text-amber-800
                        {% else %}bg-gray-100 text-gray-800{% endif %}">
                        {{ ticket.status|upper|replace({'_': ' '}) }}
                    </span>
                </div>
                
                {% if ticket.description %}
                <p class="text-gray-600 mb-4">{{ ticket.description }}</p>
                {% endif %}
                
                <div class="flex items-center justify-between">
                    <span class="text-sm text-gray-500 capitalize">Priority: {{ ticket.priority }}</span>
                    <div class="flex gap-2">
                        <button onclick="editTicket('{{ ticket.id }}', '{{ ticket.title|e('js') }}', '{{ ticket.description|e('js') }}', '{{ ticket.status }}', '{{ ticket.priority }}')" 
                                class="p-2 text-blue-600 hover:bg-blue-50 rounded-lg" 
                                aria-label="Edit ticket">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                            </svg>
                        </button>
                        <button onclick="confirmDelete('{{ ticket.id }}')" 
                                class="p-2 text-red-600 hover:bg-red-50 rounded-lg" 
                                aria-label="Delete ticket">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="3 6 5 6 21 6"></polyline>
                                <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                            </svg>
                        </button>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>

        {% if tickets|length == 0 %}
        <div class="text-center py-20">
            <p class="text-gray-500 text-xl mb-4">No tickets yet</p>
            <p class="text-gray-400">Create your first ticket to get started</p>
        </div>
        {% endif %}
    </div>

    <!-- Delete Confirmation Modal -->
    <div id="deleteModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 px-4">
        <div class="bg-white p-8 rounded-2xl shadow-xl max-w-md w-full">
            <h3 class="text-2xl font-bold mb-4 text-gray-800">Confirm Delete</h3>
            <p class="text-gray-600 mb-6">Are you sure you want to delete this ticket? This action cannot be undone.</p>
            <form method="POST" action="index.php" id="deleteForm">
                <input type="hidden" name="action" value="delete_ticket">
                <input type="hidden" name="id" id="deleteTicketId">
                <div class="flex gap-4">
                    <button type="submit" class="flex-1 px-6 py-3 bg-red-600 text-white rounded-lg hover:bg-red-700 font-semibold">
                        Delete
                    </button>
                    <button type="button" onclick="hideDeleteModal()" class="flex-1 px-6 py-3 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 font-semibold">
                        Cancel
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-8 mt-20">
        <div class="max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <p class="text-gray-400">Â© 2025 TicketFlow. All rights reserved.</p>
        </div>
    </footer>
</div>

<script>
    function showCreateForm() {
        document.getElementById('ticketForm').classList.remove('hidden');
        document.getElementById('formTitle').textContent = 'Create New Ticket';
        document.getElementById('formAction').value = 'create_ticket';
        document.getElementById('submitButtonText').textContent = 'Create Ticket';
        document.getElementById('mainTicketForm').reset();
        document.getElementById('ticketId').value = '';
    }

    function hideForm() {
        document.getElementById('ticketForm').classList.add('hidden');
        document.getElementById('mainTicketForm').reset();
    }

    function editTicket(id, title, description, status, priority) {
        document.getElementById('ticketForm').classList.remove('hidden');
        document.getElementById('formTitle').textContent = 'Edit Ticket';
        document.getElementById('formAction').value = 'update_ticket';
        document.getElementById('submitButtonText').textContent = 'Update Ticket';
        document.getElementById('ticketId').value = id;
        document.getElementById('title').value = title;
        document.getElementById('description').value = description;
        document.getElementById('status').value = status;
        document.getElementById('priority').value = priority;
        window.scrollTo({ top: 0, behavior: 'smooth' });
    }

    function confirmDelete(id) {
        document.getElementById('deleteTicketId').value = id;
        document.getElementById('deleteModal').classList.remove('hidden');
    }

    function hideDeleteModal() {
        document.getElementById('deleteModal').classList.add('hidden');
    }

    function validateTicketForm() {
        let isValid = true;
        
        document.querySelectorAll('.text-red-500').forEach(el => el.classList.add('hidden'));
        
        const title = document.getElementById('title').value.trim();
        const status = document.getElementById('status').value;
        
        if (!title) {
            document.getElementById('titleError').textContent = 'Title is required';
            document.getElementById('titleError').classList.remove('hidden');
            isValid = false;
        }
        
        if (!['open', 'in_progress', 'closed'].includes(status)) {
            document.getElementById('statusError').textContent = 'Invalid status value';
            document.getElementById('statusError').classList.remove('hidden');
            isValid = false;
        }
        
        return isValid;
    }

    {% if editingTicket %}
    // Auto-show form if editing
    document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('ticketForm').classList.remove('hidden');
    });
    {% endif %}
</script>